{
  "name": "treebox",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:analyze": "ANALYZE=true npm run build",
    "build:prod": "NODE_ENV=production npm run build",
    "build:stats": "npm run build && npx vite-bundle-analyzer dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:report": "eslint . --format json --output-file eslint-report.json",
    "preview": "vite preview",
    "analyze": "npm run build:analyze",
    "analyze:bundle": "npx vite-bundle-analyzer dist",
    "analyze:deps": "npx madge --circular --extensions ts,tsx src/",
    "analyze:size": "npm run build && du -sh dist/*",
    "quality": "npm run lint",
    "quality:report": "npm run lint:report && npm run analyze:deps",
    "perf": "npm run build && npm run preview",
    "perf:lighthouse": "npx lighthouse http://localhost:4173 --output=json --output-path=lighthouse-report.json",
    "security": "npm audit",
    "security:fix": "npm audit fix",
    "clean": "rm -rf dist",
    "clean:all": "npm run clean && rm -rf node_modules",
    "prepare": "echo 'Installation completed'",
    "ci": "npm run quality && npm run build"
  },
  "dependencies": {
    "@types/styled-components": "^5.1.34",
    "lucide-react": "^0.522.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "styled-components": "^6.1.19"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-legacy": "^6.1.1",
    "@vitejs/plugin-react": "^4.4.1",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vite-bundle-analyzer": "^0.22.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
